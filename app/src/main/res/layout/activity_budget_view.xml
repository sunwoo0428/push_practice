
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/budget_view"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/btn_dropBdg"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="예산 삭제"
        android:background="#00000000"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="85dp"
        android:layout_row="5"
        android:layout_column="0" />

    <LinearLayout
        android:id="@+id/chart2"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:layout_above="@+id/btn_dropBdg"
        android:layout_alignLeft="@+id/recommend_mny"
        android:layout_alignStart="@+id/recommend_mny"
        android:layout_marginBottom="15dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/previous_arrow"
        android:id="@+id/previous"
        android:background="#00000000"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_alignTop="@+id/next"
        android:layout_toLeftOf="@+id/btn_dropBdg"
        android:layout_toStartOf="@+id/btn_dropBdg" />

    <TextView
        android:id="@+id/recommend_mny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="remain_recommend"
        android:layout_above="@+id/chart2"
        android:layout_alignLeft="@+id/previous"
        android:layout_alignStart="@+id/previous"
        android:layout_marginBottom="28dp" />

    <LinearLayout
        android:id="@+id/chart1"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:layout_above="@+id/recommend_mny"
        android:layout_alignLeft="@+id/recommend_mny"
        android:layout_alignStart="@+id/recommend_mny"
        android:layout_marginBottom="33dp" />

    <TextView
        android:id="@+id/total_bdg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="remain_budget"
        android:layout_marginBottom="53dp"
        android:layout_above="@+id/chart1"
        android:layout_alignLeft="@+id/chart1"
        android:layout_alignStart="@+id/chart1" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/next_arrow"
        android:id="@+id/next"
        android:background="#00000000"
        android:layout_marginBottom="15dp"
        android:layout_row="6"
        android:layout_column="1"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btn_dropBdg"
        android:layout_toEndOf="@+id/btn_dropBdg" />


</RelativeLayout>