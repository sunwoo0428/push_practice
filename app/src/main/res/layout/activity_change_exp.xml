<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sunwo.money_book.cat_inc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="450dp"
            android:padding="30dp"
            android:id="@+id/cat_exp">

             <EditText
            android:id="@+id/et_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="금액을 입력하시오"/>

                <Button
            android:id="@+id/btn_exDate"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="날짜"/>
                <Button
            android:id="@+id/btn_exCategory"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="카테고리"/>
                <Button
            android:id="@+id/btn_exMethod"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="지출분류"/>
             <EditText
            android:id="@+id/et_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="상세설명을 입력하시오"/>
                <Button
            android:id="@+id/btn_exDescription"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="상세설명 입력"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/insertIncome1"
            xmlns:android="http://schemas.android.com/apk/res/android">

                <Button
            android:id="@+id/btn_exReturn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="돌아가기"/>
                 
                <Button
            android:id="@+id/btn_exInsert"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="수정"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
